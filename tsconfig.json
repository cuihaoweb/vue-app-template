{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "noEmitOnError": true,
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "importHelpers": true,
        "strict": true,
        "noImplicitThis": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*",
                "src/*.vue",
                "src/*/index.vue"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "typings"
    ],
    "exclude": [
        "node_modules"
    ]
}